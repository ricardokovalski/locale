{
  "name": "ricardokovalski/locale-value-object",
  "description": "A simple PHP Locale Value Object",
  "type": "library",
  "authors": [
    {
      "name": "Ricardo Kovalski",
      "email": "ricardokovalskicruz@gmail.com",
      "role": "Maintainer"
    }
  ],
  "license": "MIT",
  "keywords": ["locale", "value-object"],
  "require": {
    "php": ">=5.6",
    "ext-json": "*"
  },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "scripts": {
        "check-style": "php-cs-fixer fix --diff --verbose --dry-run .",
        "fix-style": "php-cs-fixer fix ."
    },
  "autoload": {
    "psr-4": {
      "RicardoKovalski\\Locale\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "RicardoKovalski\\Locale\\Tests\\": "tests/"
    }
  }
}
